# STT Service Configuration

# Model Configuration
WHISPER_MODEL=base
DEVICE=auto
COMPUTE_TYPE=auto

# Server Configuration
HOST=0.0.0.0
PORT=8002
RELOAD=false
LOG_LEVEL=INFO

# Audio Processing
SAMPLE_RATE=16000
MAX_FILE_SIZE_MB=25

# Transcription Parameters
BEAM_SIZE=5
BEST_OF=5
TEMPERATURE=0.0
VAD_FILTER=true
VAD_THRESHOLD=0.5

# File Management
TEMP_DIR=/tmp/stt-uploads
CLEANUP_AFTER_TRANSCRIBE=true

# Model Storage
MODEL_DIR=/models/stt
DOWNLOAD_ROOT=/models/stt

# Performance
NUM_WORKERS=1
CPU_THREADS=4
