# SIP Gateway Service Configuration

# Service
SERVICE_NAME=OCP SIP Gateway
VERSION=1.0.0
HOST=0.0.0.0
PORT=8006
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=false

# Voice Connector Integration
VOICE_CONNECTOR_URL=ws://voice-connector:8005

# FreeSWITCH Connection
FREESWITCH_HOST=freeswitch
FREESWITCH_ESL_PORT=8021
FREESWITCH_ESL_PASSWORD=ClueCon

# Twilio SIP Trunk Configuration
SIP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# Audio Configuration
SIP_SAMPLE_RATE=8000
PLATFORM_SAMPLE_RATE=16000
CODEC_PREFERENCE=PCMU
AUDIO_CHUNK_SIZE=160

# Call Management
MAX_CONCURRENT_CALLS=50
CALL_TIMEOUT_SECONDS=3600

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=300
WS_RECONNECT_DELAY=5

# RTP Configuration
RTP_PORT_RANGE_START=10000
RTP_PORT_RANGE_END=20000
